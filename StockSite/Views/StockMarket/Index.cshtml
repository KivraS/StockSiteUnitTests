@using StockSite.BusinessLogic.StockBuy

@{
    ViewData["Title"] = "Index";
}

<h1>Stock Market</h1>
<<form id="form" method="post" asp-controller="StockMarket" asp-action="PurchaseStock" runat="server">
<label for="stock">Stock to purchase</label>
<select name="stockId" id="stock">
    @foreach(var item in StockMarketService.Stocks)
    {
       <option value="@item.Key">@item.Value</option>
    }
</select>
<label for="amount">Amount</label>
<input type="number" id="amount" name="amount"
       min="0" max="1000">

<input name="submit" type="submit" value="Purchase Stock">

</form>